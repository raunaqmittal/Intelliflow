{
  "watch": [
    "vite.config.ts",
    "tailwind.config.ts",
    "postcss.config.js",
    "tsconfig.json",
    "tsconfig.app.json",
    "tsconfig.node.json",
    "index.html",
    ".env",
    ".env.*"
  ],
  "ignore": [
    "src/**",
    "node_modules/**",
    "dist/**"
  ],
  "exec": "npm run dev",
  "ext": "ts,tsx,js,jsx,html,css,json,env"
}
